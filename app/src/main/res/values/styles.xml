<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleText">
    <item name="android:fontFamily">@font/poppins</item>
    <item name="android:textColor">#565656</item>
    <item name="android:textSize">18sp</item>
    <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
</style>

    <style name="bodyText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#656565</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="unImportantText">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#656565</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity"> center</item>
    </style>

    <style name="refreshBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/refreshBtnColor</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainTitleCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="mainContentCardViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:visibility">invisible</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="noDataTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="noDataDetailTextStyle" parent="titleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">#EFEFEF</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ShowButtonsStyle" parent="titleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">"Show News"</item>
        <item name="android:visibility">visible</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="backButtonsStyle" parent="titleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:text">"Back"</item>
        <item name="android:visibility">invisible</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editTextsStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">date|numberSigned|text|textPassword|time</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">#656565</item>
    </style>

    <style name="TitleOfPageStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">70dp</item>
    </style>

    <style name="floatingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">center</item>
        <item name="android:scrollbarAlwaysDrawHorizontalTrack">false</item>
        <item name="android:focusable">true</item>
        <item name="backgroundTint">#ED4F43</item>
        <item name="borderWidth">0.5dp</item>
        <item name="elevation">50dp</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">50dp</item>
        <item name="rippleColor">#FFFFFF</item>
        <item name="srcCompat">@android:drawable/ic_menu_add</item>
        <item name="useCompatPadding">true</item>
    </style>
</resources>